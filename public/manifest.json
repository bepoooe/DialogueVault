{
  "manifest_version": 3,
  "name": "DialogueVault",
  "version": "2.0.0",
  "description": "Professional conversation navigation for ChatGPT, Claude, and Gemini with an intelligent sidebar index.",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*",
        "https://bard.google.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_title": "DialogueVault"
  },
  "web_accessible_resources": [
    {
      "resources": ["sidebar.html"],
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*",
        "https://bard.google.com/*"
      ]
    }
  ]
}
